body {
  font-family: "Segoe UI", "Lucida Grande", Helvetica, Arial, "Microsoft YaHei", FreeSans, Arimo, "Droid Sans","wenquanyi micro hei","Hiragino Sans GB", "Hiragino Sans GB W3", Arial, sans-serif;
}

.fade-transition {
  transition: opacity .3s ease;
}

.fade-enter, .fade-leave {
  opacity: 0;
}

.box-footer button {
  margin-left:15px;
}
ul li {
  list-style: none;
}

.form-horizontal {
  .form-group {
    margin-right: 0;
    margin-left: 0;

    > .col-sm-3, > .col-sm-4, > .col-sm-12 {
      margin-bottom: 12px;
    }
  }

  .control-label.text-left {
    text-align: left;
  }
}

.alert.top {
  z-index: 9999 !important;
}
.left {
  float: left;
}
.bread-header li {
  float: left;
  margin-right:10px;
}
.bread-header li a, .bread-header li span{
  margin: 0 10px 0 0;
  font-size: 20px;
}

.content-header {
  padding-bottom: 10px;
}
.img-receipt {
  max-width: 200px;
  max-height: 200px;
  display: inline-block;
  border: 1px solid #ddd;
}
.div-margin .dropdown-menu {
  max-height: 165px;
  overflow: auto;
}

table.table-simp {
  thead {
    > tr {
      > th {
        border-bottom: 1px solid #efefef;
        background: #f4f4f4;
      }
    }
  }

  tfoot {
    > tr {
      > th {
        border-top: 1px solid #efefef;
        background: #f4f4f4;
      }
    }
  }

  tbody {
    tr {
      &:hover {
        background-color: #fbfbfb;
      }
    }

    .table-link.disable {
      color: #333;
      cursor: default;
    }
  }

  .empty {
    padding: 60px 0;
  }
}

.alert.top {
  .alert-icon-float-left {
    float: left;
    font-size: 30px;
  }

  > p {
    word-break: break-all;
    float: left;
    width: 85%;
    margin-left: 8px;
  }
}
.dataTable tr td a {
  margin:0 5px 0;
}
.modal-body {
  max-height: 750px;
  overflow: auto;
}
.text-style {
  text-align: left;
  width: 210px;
  height: 22px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
#imgLoading {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 9998;
  background: #000;
  top: 0;
  left: 0;
  opacity 0.6;
}
#imgContainer {
  position: absolute;
  z-index: 9999;
  background: #fff;
  padding:10px;
  max-width: 1600px;
  max-height: 900px;
  overflow :hidden;
  cursor: move;
}
.closeImg {
  width: 27px;
  height: 27px;
  display: block;
  background: url('../images/close.png') no-repeat;
  position: absolute;
  right: 5px;
  top: 5px;
  opacity: 0.5;
  -webkit-opacity: 0.5;
}
.closeImg:hover{
  cursor: pointer;
  opacity: 1;
  -webkit-opacity: 1;
}

.btn-uploader {
  position: relative;
  overflow: hidden;

  input[type="file"] {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    opacity: 0;
  }
}

.box-none {
  border: none;
  position: relative;
  box-shadow: none;
  min-height: 200px;
}
.uploadLink {
  width: 150px;
  display: inline-block;
  height: 150px;
  border: 1px solid #72afd2;
  margin:0 10px 0 5px;
  float:left;
}
.uploadDiv {
  float:left;
  width: 58%;
  margin-left: 15px;
}
.uploadDiv > input{
  margin:0 0 15px 0;
}
.divBut button {
  margin:0 0 0 10px;
}
.datepicker.dropdown-menu {
  z-index: 9999 !important;
}
.j-filed-date .input-group-addon {
  background-color: #eee;
}
.input-data-div {
  position : relative;
}
.input-data-div i{
  position: absolute;
  z-index: 10;
  top: 10px;
  left: 8px;
}
input-data-div input {
    padding-left: 25px;
}
// reset vuestrap
.popover{
  max-width: 800px;
  white-space: nowrap;
}
.helpBtn{
  outline: 0;
  width: 20px;
  height: 20px;
  line-height: 100%;
  border:1px solid gray;
  border-radius:50%;
  text-align: center;
  background-color: transparent;
  cursor: pointer;
}
